<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="@dimen/padding">

    <TextView
        android:id="@+id/lbl_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kartheek Raj" />

    <Button
        android:id="@+id/btn_calender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_user"
        android:layout_marginTop="@dimen/large_padding"
        android:text="Calender View" />

    <Button
        android:id="@+id/btn_farewell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_calender"
        android:layout_marginTop="@dimen/padding"
        android:text="Farewell" />

    <Button
        android:id="@+id/btn_guest_accommodation_request"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_farewell"
        android:layout_marginTop="@dimen/padding"
        android:text="Guest/ Friend Accommodation Request" />

    <ImageView
        android:id="@+id/img_user"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/download"

        />

    <TextView
        android:id="@+id/lbl_foodtype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Non Veg"
        android:layout_below="@+id/lbl_username"/>


</RelativeLayout>